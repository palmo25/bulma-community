<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>City</th>
      <th>Community</th>
      <th>Community type</th>
      <th>Name</th>
      <th>Surname</th>
      <th>Alias</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th>Country of birth</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Studies</th>
      <th>Study type</th>
      <th>Work</th>
      <th>Entry</th>
      <th>Service</th>
      <th>Religion</th>
      <th>Catechumen</th>
      <th>Baptised</th>
      <th>Bible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.country %></td>
        <td><%= member.city %></td>
        <td><%= member.community %></td>
        <td><%= member.community_type %></td>
        <td><%= member.name %></td>
        <td><%= member.surname %></td>
        <td><%= member.alias %></td>
        <td><%= member.gender %></td>
        <td><%= member.date_of_birth %></td>
        <td><%= member.country_of_birth %></td>
        <td><%= member.phone %></td>
        <td><%= member.email %></td>
        <td><%= member.studies %></td>
        <td><%= member.study_type %></td>
        <td><%= member.work %></td>
        <td><%= member.entry %></td>
        <td><%= member.service %></td>
        <td><%= member.religion %></td>
        <td><%= member.catechumen %></td>
        <td><%= member.baptised %></td>
        <td><%= member.bible %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

